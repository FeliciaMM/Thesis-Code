const express = require('express');
const router = express.Router();
const { Post } = require("../database.js");


router.get('/',(req, res)=>{
     res.send('Hello world')
 });

router.post('/',async(req,res)=>{
     const post = req.body;
     await Post.create(post);
     res.json(post);
 });

module.exports = router;